<div id="diary-background">

  <div class='container'>

    <p id="notice"><%= notice %></p>

      <div> 
        <div id="blog-header">
          <h1 class="blog-title">An Unexpected Journey</h1>
          <p class="lead blog-description">The Official Digital Diary for Cami and Gordon's Married Life</p>
          <%= link_to 'New Diary', new_diary_path, class: 'TACO' %>
        </div>
      </div>

    <% @diaries.each do |diary| %>
      <div class="blog-post">
        <h2 class="blog-post-title"><%= link_to diary.title, diary %></h2>
        <p class="blog-post-meta"><%= diary.created_at %></p>
        <br>

        <%= image_tag diary.image, width: '400px', height: '250px' %>
        <p>
        <%= link_to 'Edit', edit_diary_path(diary) %>
        <%= link_to 'Destroy', diary, method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
      </div> 
    <% end %>

  </div>
</div>

